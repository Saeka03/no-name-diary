generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int       @id @default(autoincrement())
  name      String
  password  String   
}

model Diary {
  id        Int       @id @default(autoincrement())
  dateTime  DateTime
  title     String
  content   String
  like      Int
  laugh     Int
  cry       Int
  comment   Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  dateTime  DateTime
  content   String
  diaryId   Int
  diary     Diary     @relation(fields: [diaryId], references: [id])
}